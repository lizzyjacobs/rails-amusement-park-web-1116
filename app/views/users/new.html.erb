<h1>Sign up friends!</h1>

<%=form_for @user do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Height (in inches)" %>
  <%= f.text_field :height %>
  <%= f.label "How happy are you? (1-5 scale)" %>
  <%= f.text_field :happiness %>
  <%= f.label "How nauseaus are you? (1-5 scale)" %>
  <%= f.text_field :nausea %>
  <%= f.label "How many dollars are in your pocket?" %>
  <%= f.text_field :tickets %>
  <%= f.label "Check box if you're a theme park owner" %>
  <%= f.check_box :admin %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Create User" %>

<% end %>
